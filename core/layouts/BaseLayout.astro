---
import '../styles/global.css';
import { getMenuItems } from '../utils/content';

interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 's:CMS - Static Content Management System',
  description = 'A powerful static site CMS built with Astro'
} = Astro.props;

const currentPath = Astro.url.pathname;

let menuItems: Array<{title: string; slug: string; position?: number}> = [];
try {
  menuItems = await getMenuItems();
} catch (error) {
  console.warn('Failed to load menu items:', error);
}
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    
    <title>{title}</title>
    
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <slot name="head" />
  </head>
  
  <body>
    <header class="site-header">
      <div class="container">
        <slot name="header-extra" />
        
        <div class="header-content">
          <a href="/" class="logo">
            <h1>s:CMS</h1>
          </a>
          
          <nav class="main-nav">
            <ul>
              {menuItems.map(item => (
                <li>
                  <a 
                    href={`/${item.slug}`}
                    class={currentPath.includes(item.slug) ? 'active' : ''}
                  >
                    {item.title}
                  </a>
                </li>
              ))}
            </ul>
          </nav>
        </div>
      </div>
    </header>

    <main class="site-main">
      <div class="container">
        <slot />
      </div>
    </main>

    <footer class="site-footer">
      <div class="container">
        <slot name="footer-extra" />
        
        <div class="footer-content">
          <p>
            Built with â™¥ with s:CMS by 
            <a href="https://lad.saras.uniroma1.it" target="_blank" rel="noreferrer">
              LAD @Sapienza
            </a>
          </p>
          <p>
            <a href="https://github.com/lad-sapienza/scms-astro" target="_blank" rel="noreferrer">
              GitHub
            </a>
          </p>
        </div>
      </div>
    </footer>
  </body>
</html>

<style>
  .site-header {
    background: #fe04fc;
    color: white;
    padding: 1.5rem 0;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .logo {
    text-decoration: none;
    color: white;
  }

  .logo h1 {
    font-size: 2rem;
    margin: 0;
  }

  .main-nav ul {
    display: flex;
    list-style: none;
    gap: 2rem;
    margin: 0;
    padding: 0;
  }

  .main-nav a {
    color: white;
    text-decoration: none;
    font-weight: 500;
    transition: opacity 0.2s;
  }

  .main-nav a:hover,
  .main-nav a.active {
    opacity: 0.8;
    text-decoration: underline;
  }

  .site-main {
    min-height: calc(100vh - 200px);
    padding: 3rem 0;
  }

  .site-footer {
    background: #f5f5f5;
    padding: 2rem 0;
    margin-top: 4rem;
    border-top: 1px solid #e5e5e5;
  }

  .footer-content {
    text-align: center;
  }

  .footer-content p {
    margin: 0.5rem 0;
  }

  .footer-content a {
    color: #fe04fc;
    text-decoration: none;
  }

  .footer-content a:hover {
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .header-content {
      flex-direction: column;
      text-align: center;
    }

    .main-nav ul {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }
  }
</style>
