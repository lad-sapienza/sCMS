/**
 * VectorLayer Component
 * 
 * Adds vector layer to MapLeaflet component
 */

---
import type { DataSource } from '../types';

interface Props {
  source: DataSource;
  name?: string;
  popupTemplate?: string;
  checked?: boolean;
}

const { source, name = 'Layer', checked = true } = Astro.props;
---

<div class="vector-layer" data-source={JSON.stringify(source)}>
  <!-- Layer content will be added by Leaflet -->
</div>

