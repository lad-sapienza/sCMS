/**
 * Field Component
 * 
 * Display a specific field from a Record component's data
 */

---
interface Props {
  name: string | string[];
  transformer?: (value: any) => any;
}

const { name, transformer } = Astro.props;
---

<span class="field-component" data-field={typeof name === 'string' ? name : name.join('.')}>
  <!-- Field value will be rendered here -->
</span>

