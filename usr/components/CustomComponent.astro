/**
 * Example custom component
 * 
 * Add your own components here. You can also override core components
 * by creating a file with the same name as a core component.
 */

---
interface Props {
  title?: string;
}

const { title = 'Custom Component' } = Astro.props;
---

<div class="custom-component">
  <h3>{title}</h3>
  <slot />
</div>

<style>
  .custom-component {
    padding: 1rem;
    border: 2px solid #fe04fc;
    border-radius: 8px;
    margin: 1rem 0;
  }
  
  .custom-component h3 {
    color: #fe04fc;
    margin-top: 0;
  }
</style>
