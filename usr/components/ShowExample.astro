---
interface Props {
  codeWidth?: 'narrow' | 'default' | 'equal';
  disabled?: boolean;
}

const { codeWidth = 'default', disabled = false } = Astro.props;

if (disabled) {
  return null;
}

const gridCols = {
  narrow: 'md:grid-cols-[1fr_2fr]',
  default: 'md:grid-cols-[2fr_3fr]',
  equal: 'md:grid-cols-2'
}[codeWidth];
---

<div class="mb-4">
  <slot name="intro" />
</div>

<div class={`grid grid-cols-1 ${gridCols} gap-4`}>
  <div>
    <slot name="code" />
  </div>
  <div>
    <slot />
  </div>
</div>
