---
import "../../core/styles/global.css"
import "../styles/global.css"
import SEO from "../../core/components/SEO/SEO.astro"
import { siteMetadata } from "../user.config.mjs"
import { NavbarToggle } from "../components/NavbarToggle"
import packageJson from "../../package.json"

interface Props {
  title?: string
  description?: string
}

const { title = siteMetadata.title, description = siteMetadata.description } =
  Astro.props

const currentPath = Astro.url.pathname

// Navigation menu items
const menuItems = [
  { href: "/", label: "Home", exact: true },
  { href: "/theme-preview", label: "Theme Preview", exact: true },
  { href: "/datatable-demo", label: "DataTb Demo", exact: true },
  { href: "/map-demo", label: "Map Demo", exact: true },
  { href: "/gallery-demo", label: "Gallery Demo", exact: true },
  { href: "/zotero-demo", label: "Zotero Demo", exact: true },
  { href: "/blog", label: "Blog", exact: false },
  { href: "/docs", label: "Docs", exact: false },
  { href: "/credits", label: "Credits", exact: true },
]

// Helper function to determine if menu item is active
const isActive = (item: any) => {
  if (item.exact) {
    return currentPath === item.href
  } else {
    return currentPath.startsWith(item.href)
  }
}
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <SEO title={title} description={description} siteMetadata={siteMetadata} />
    <link rel="icon" type="image/png" href="/images/favicon.png" />
    <!-- Preload critical fonts for better performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <slot name="head" />
  </head>
  <body class="d-flex flex-column min-vh-100">
    <!-- Enhanced Navigation with modern academic styling -->
    <nav class="navbar navbar-expand-lg fixed-top">
      <div class="container">
        <a class="navbar-brand d-flex align-items-center" href="/">
          <span class="fw-bold">
            {siteMetadata.title}
          </span>
        </a>

        <NavbarToggle targetId="navbarNav" client:load />

        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto mb-2 mb-md-0">
            {
              menuItems.map(item => (
                <li class="nav-item">
                  <a
                    class:list={[
                      "nav-link",
                      isActive(item) ? "active" : "",
                    ]}
                    href={item.href}
                  >
                    {item.label}
                  </a>
                </li>
              ))
            }
          </ul>
        </div>
      </div>
    </nav>

    <!-- Main content with proper spacing for fixed navbar -->
    <main class="container flex-grow-1" style="padding-top: 6rem; padding-bottom: 3rem;">
      <slot />
    </main>

    <!-- Enhanced Footer with modern academic styling -->
    <footer class="footer-enhanced py-5 mt-auto">
      <div class="container">
        <div class="footer-content p-4">
          <div class="row align-items-center">
            <div class="col-md-3 text-center mb-3 mb-md-0">
              <div class="footer-logo">
                <img
                  alt="s:CMS & LAD Logo"
                  src="./images/scms-lad.png"
                  class="img-fluid"
                  style="max-height: 80px;"
                />
              </div>
            </div>
            <div class="col-md-9">
              <div class="ps-md-4 border-start border-primary border-3 d-none d-md-block"></div>
              <div class="ps-md-4">
                <p class="mb-2 fw-medium" style="color: #1e293b;">
                  <strong style="background: var(--gradient-primary); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">s:CMS</strong> 
                  <span class="text-muted">(v{packageJson.version})</span>
                </p>
                <p class="mb-2 text-muted">
                  Progetto ideato e sviluppato dal <br />
                  <a
                    href="https://lad.saras.uniroma1.it"
                    target="_blank"
                    rel="noreferrer"
                    class="fw-medium"
                  >
                    LAD: Laboratorio di Archeologia Digitale alla Sapienza
                  </a>
                </p>
                <div class="d-flex gap-3 flex-wrap">
                  <a
                    href="https://github.com/lad-sapienza/sCMS"
                    target="_blank"
                    rel="noreferrer"
                    class="btn btn-sm btn-outline-primary"
                  >
                    üìù Code
                  </a>
                  <a
                    href="https://github.com/lad-sapienza/sCMS/issues"
                    target="_blank"
                    rel="noreferrer"
                    class="btn btn-sm btn-outline-secondary"
                  >
                    üêõ Issues
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
