---
import "../../core/styles/global.css"
import "../styles/global.css"
import SEO from "../../core/components/SEO/SEO.astro"
import { siteMetadata } from "../user.config.mjs"
import { NavbarToggle } from "../components/NavbarToggle"
import packageJson from "../../package.json"

interface Props {
  title?: string
  description?: string
}

const { title = siteMetadata.title, description = siteMetadata.description } =
  Astro.props

const currentPath = Astro.url.pathname

// Navigation menu items
const menuItems = [
  { href: "/", label: "Home", exact: true },
  { href: "/datatable-demo", label: "DataTb Demo", exact: true },
  { href: "/map-demo", label: "Map Demo", exact: true },
  { href: "/gallery-demo", label: "Gallery Demo", exact: true },
  { href: "/zotero-demo", label: "Zotero Demo", exact: true },
  { href: "/blog", label: "Blog", exact: false },
  { href: "/docs", label: "Docs", exact: false },
  { href: "/credits", label: "Credits", exact: true },
]

// Helper function to determine if menu item is active
const isActive = (item: any) => {
  if (item.exact) {
    return currentPath === item.href
  } else {
    return currentPath.startsWith(item.href)
  }
}
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <SEO title={title} description={description} siteMetadata={siteMetadata} />
    <link rel="icon" type="image/png" href="/images/favicon.png" />
    <slot name="head" />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow">
      <div class="container">
        <a class="navbar-brand text-dark fw-bold" href="/">
          {siteMetadata.title}
        </a>

        <NavbarToggle targetId="navbarNav" client:load />

        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto mb-2 mb-md-0">
            {
              menuItems.map(item => (
                <li class="nav-item">
                  <a
                    class:list={[
                      "nav-link",
                      isActive(item) ? "active fw-semibold" : "",
                    ]}
                    href={item.href}
                  >
                    {item.label}
                  </a>
                </li>
              ))
            }
          </ul>
        </div>
      </div>
    </nav>

    <main class="container py-5">
      <slot />
    </main>

    <footer class="bg-white border-top mt-5 text-muted shadow">
      <div class="container">
        <div class="row my-4">
          <div class="col-4 col-md-2">
            <div class="d-flex flex-row align-items-center mb-3">
              <div class="p-4">
                  <img
                    alt=""
                    src="./images/scms-lad.png"
                  />
              </div>
            </div>
          </div>
          <div class="col-8 col-md-10">
            <div class="p-3 border-start border-primary">
              <p class="p-s-3">
                <strong>s:CMS</strong> (v{packageJson.version}) Ã¨ un progetto
                ideato e sviluppato dal<!-- -->
                <br /><a
                  href="https://lad.saras.uniroma1.it"
                  target="_blank"
                  rel="noreferrer"
                  >LAD: Laboratorio di Archeologia Digitale alla Sapienza</a
                ><br /><a
                  href="https://github.com/lad-sapienza/sCMS"
                  target="_blank"
                  rel="noreferrer">Code</a
                >&nbsp;|&nbsp;<a
                  href="https://github.com/lad-sapienza/sCMS/issues"
                  target="_blank"
                  rel="noreferrer">Issues</a
                >
              </p>
            </div>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
