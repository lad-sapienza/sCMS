---
import "../../core/styles/global.css"
import "../styles/user-theme.css"
import SEO from "../../core/components/SEO/SEO.astro"
import { siteMetadata } from "../user.config.mjs"

interface Props {
  title?: string
  description?: string
}

const { title = siteMetadata.title, description = siteMetadata.description } =
  Astro.props

const currentPath = Astro.url.pathname
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <SEO title={title} description={description} siteMetadata={siteMetadata} />
    <link rel="icon" type="image/png" href="/images/favicon.png" />
    <slot name="head" />
  </head>
  <body class="bg-gray-50">
    <header class="bg-white shadow">
      <div class="max-w-7xl mx-auto px-4 py-6">
        <div class="flex justify-between items-center">
          <h1 class="text-3xl font-bold text-gray-900">
            <a href="/" class="hover:text-gray-700">{siteMetadata.title}</a>
          </h1>
          <nav class="space-x-6">
            <a
              href="/"
              class:list={[
                "hover:text-gray-900",
                currentPath === "/"
                  ? "text-gray-900 font-semibold"
                  : "text-gray-600",
              ]}>Home</a
            >
            <a
              href="/datatable-demo"
              class:list={[
                "hover:text-gray-900",
                currentPath === "/datatable-demo"
                  ? "text-gray-900 font-semibold"
                  : "text-gray-600",
              ]}>DataTb Demo</a
            >
            <a
              href="/map-demo"
              class:list={[
                "hover:text-gray-900",
                currentPath === "/map-demo"
                  ? "text-gray-900 font-semibold"
                  : "text-gray-600",
              ]}>Map Demo</a
            >
            <a
              href="/gallery-demo"
              class:list={[
                "hover:text-gray-900",
                currentPath === "/gallery-demo"
                  ? "text-gray-900 font-semibold"
                  : "text-gray-600",
              ]}>Gallery Demo</a
            >
            <a
              href="/zotero-demo"
              class:list={[
                "hover:text-gray-900",
                currentPath === "/zotero-demo"
                  ? "text-gray-900 font-semibold"
                  : "text-gray-600",
              ]}>Zotero Demo</a
            >
            <a
              href="/blog"
              class:list={[
                "hover:text-gray-900",
                currentPath.startsWith("/blog")
                  ? "text-gray-900 font-semibold"
                  : "text-gray-600",
              ]}>Blog</a>
            <a
              href="/docs"
              class:list={[
                "hover:text-gray-900",
                currentPath.startsWith("/docs")
                  ? "text-gray-900 font-semibold"
                  : "text-gray-600",
              ]}>Docs</a>
            <a
              href="/credits"
              class:list={[
                "hover:text-gray-900",
                currentPath === "/credits"
                  ? "text-gray-900 font-semibold"
                  : "text-gray-600",
              ]}>Credits</a
            >
          </nav>
        </div>
      </div>
    </header>

    <main class="max-w-7xl mx-auto px-4 py-8">
      <slot />
    </main>

    <footer class="bg-white border-t mt-12">
      <div class="max-w-7xl mx-auto px-4 py-6 text-center text-gray-600">
        <p>
          Built with ♥️ by <a
            href="https://lad.saras.uniroma1.it"
            class="text-blue-600 hover:underline"
            target="_blank"
            rel="noreferrer">{siteMetadata.siteName}</a>
        </p>
      </div>
    </footer>
  </body>
</html>
