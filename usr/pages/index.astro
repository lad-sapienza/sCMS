---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="s:CMS - Home">
  <div class="space-y-8">
    <section class="text-center">
      <h2 class="text-4xl font-bold text-gray-900 mb-4">
        Welcome to s:CMS
      </h2>
      <p class="text-xl text-gray-600 mb-8">
        A static site Content Management System built with Astro
      </p>
    </section>

    <section class="grid md:grid-cols-2 gap-6">
      <div class="bg-white p-6 rounded-lg shadow">
        <h3 class="text-xl font-semibold mb-2">Fast</h3>
        <p class="text-gray-600">Built on modern web technologies for optimal performance</p>
      </div>
      
      <div class="bg-white p-6 rounded-lg shadow">
        <h3 class="text-xl font-semibold mb-2">Flexible</h3>
        <p class="text-gray-600">Easy to customize and extend</p>
      </div>
    </section>
  </div>
</BaseLayout>
