---
import { getCollection, render } from 'astro:content';
import { type CollectionEntry } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

export const prerender = true;

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  
  return posts.map((post) => ({
    params: { slug: post.id },
    props: { post },
  }));
}

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { Content } = await render(post);

const formattedDate = post.data.date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<BaseLayout title={post.data.title} description={post.data.description}>
  <main class="container py-5">
    <article>
      <!-- Blog post header -->
      <div class="mb-5 border-bottom pb-4">
        <div class="mb-3">
          <a 
            href="/blog" 
            class="btn btn-link text-primary text-decoration-none p-0"
          >
            ← Back to Blog
          </a>
        </div>

        <h1 class="mb-4">{post.data.title}</h1>
        
        <p class="lead text-muted">
          {post.data.description}
        </p>

        <div class="mt-4 d-flex flex-wrap align-items-center gap-3 small text-muted">
          <time datetime={post.data.date.toISOString()}>
            {formattedDate}
          </time>
          
          {post.data.author && (
            <>
              <span>·</span>
              <span>By {post.data.author}</span>
            </>
          )}
        </div>

        {post.data.tags && post.data.tags.length > 0 && (
          <div class="mt-3 d-flex flex-wrap gap-2">
            {post.data.tags.map((tag) => (
              <span class="badge bg-primary-subtle text-primary-emphasis">
                {tag}
              </span>
            ))}
          </div>
        )}
      </div>

      <!-- Blog post content -->
      <div class="blog-content my-5">
        <Content />
      </div>

      <!-- Back to blog link -->
      <div class="mt-5 border-top pt-4">
        <a 
          href="/blog" 
          class="btn btn-link text-primary text-decoration-none p-0"
        >
          ← Back to all posts
        </a>
      </div>
    </article>
  </main>
</BaseLayout>

<style>
  .blog-content {
    /* Bootstrap typography styles for blog content */
    line-height: 1.6;
  }
  


</style>
